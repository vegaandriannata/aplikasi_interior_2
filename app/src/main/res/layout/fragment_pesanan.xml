<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorGrey"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/menu_furniture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_btn_white"
            android:gravity="center"
            android:text="Furnitur"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/menu_interior"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_btn_white"
            android:gravity="center"
            android:text="Interior"
            android:textStyle="bold"
            android:textSize="18dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorYellow"
        android:padding="8dp">

        <Spinner
            android:id="@+id/spinnerBulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/bulan_array" />

        <Spinner
            android:id="@+id/spinnerTahun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/tahun_array" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn2"
            android:textColor="@color/colorYellow"
            android:text="Filter" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pesananLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ListView
            android:id="@+id/listViewPesanan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pesananInteriorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/listViewPesananInterior"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
    </LinearLayout>

</LinearLayout>
